{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/material": "^6.1.10",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.8",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.1.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "./public/electron.js",
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run electron\"",
    "start-react": "BROWSER=none react-scripts start",
    "electron": "wait-on http://localhost:3000 && electron ./public/electron.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-backend": "cd ../backend && python3 build_backend.py",
    "build-frontend": "npm run build",
    "build-all": "npm run build-backend && npm run build-frontend",
    "package": "npm run build-all && electron-builder",
    "package-win": "npm run build-all && electron-builder --win",
    "package-mac": "npm run build-all && electron-builder --mac",
    "package-linux": "npm run build-all && electron-builder --linux",
    "clean": "rimraf dist build && cd ../backend && rimraf dist build __pycache__"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyApp",
    "files": [
      "build/**/*",
      "public/index.html",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/",
        "to": "backend/",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "rimraf": "^5.0.5",
    "wait-on": "^8.0.3"
  }
}
